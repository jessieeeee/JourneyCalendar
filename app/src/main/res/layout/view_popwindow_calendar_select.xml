<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:background="@color/default_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/weekName"
            android:text="日" />

        <TextView
            style="@style/weekName"
            android:text="一" />

        <TextView
            style="@style/weekName"
            android:text="二" />

        <TextView
            style="@style/weekName"
            android:text="三" />

        <TextView
            style="@style/weekName"
            android:text="四" />

        <TextView
            style="@style/weekName"
            android:text="五" />

        <TextView
            style="@style/weekName"
            android:text="六" />
    </LinearLayout>

    <journeycalendar.jessie.com.calendarlib.journey.all.DayPickerView
        android:id="@+id/pop_pickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        app:normalDayTextColor_pickview="@color/default_black"
        app:previousDayTextColor_pickview="@color/default_light_gray"
        app:selectedBgColor_pickview="@color/default_blue"
        app:selectedTextColor_pickview="@color/white"
        app:todayTextColor_pickview="@color/default_blue"
        app:isRoundRect_pickview="false"
        app:stackFromEnd="true"
        app:dayTextSize_pickview="12sp"
        app:flagNormalBgColor_pickview="@color/default_orange"
        app:flagPreBgColor_pickview="@color/default_light_gray"
        app:flagTextStr_pickview="@string/flag"
        app:flagTextColor_pickview="@color/white"
        app:preMonthNum_pickview="3"
        app:nextMonthNum_pickview="6"
        app:textSizeMonthLine="12sp"
        app:textSizeMonth="10sp">

    </journeycalendar.jessie.com.calendarlib.journey.all.DayPickerView>


</LinearLayout>
